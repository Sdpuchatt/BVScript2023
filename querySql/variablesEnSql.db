-- Variables
DECLARE --Se separan por coma
--Se puede inicializar en el bloque de declaracon pero no se puede cambiar el valor luego
	@ID_VALOR int,
	@NOMBRE varchar(20) = 'Pepito',
	@TELEFONO NUMERIC(10),
	@FECHA_NAC DATE,
	@ACTIVO BIT;
BEGIN
	SET @ID_VALOR = 50
	SET @TELEFONO = 123456789
	SET @FECHA_NAC = '2024-01-01'
	SET @ACTIVO = 'TRUE' --UNO O CERO, TRUE O FALSE

	SELECT @ID_VALOR AS VALOR;
	SELECT @ID_VALOR AS ID, @NOMBRE AS NOMBRE, @TELEFONO AS TELEFONO, @FECHA_NAC AS 'FECHA DE NACIMIENTO',
	@ACTIVO AS ACTIVO
END;

-- Practica de variables
SELECT * FROM ARTICULOS

DECLARE
	@CODIGO INT = 10;
BEGIN
	SELECT * FROM ARTICULOS WHERE CODIGO = @CODIGO
END;
--Practica 2
DECLARE 
	@PATRON VARCHAR(20)
BEGIN
	SET @PATRON = '%MO%'
	SELECT * FROM ARTICULOS WHERE DESCRIPCION LIKE @PATRON
END
--Tercer practica
DECLARE
	@MAYORPRECIO DECIMAL(6,2)
BEGIN
	SELECT @MAYORPRECIO = MAX(PRECIO) FROM ARTICULOS;
	SELECT @MAYORPRECIO AS Precio
	SELECT * FROM ARTICULOS WHERE PRECIO = @MAYORPRECIO
END